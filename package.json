{
  "name": "deno2node",
  "version": "1.0.0",
  "description": "Transpiles Deno projects into `.js` and `.d.ts` for Node.js.",
  "type": "module",
  "bin": {
    "deno2node": "lib/cli.js"
  },
  "main": "./lib/mod.js",
  "exports": "./lib/mod.js",
  "typings": "./lib/mod.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "src/**/*.ts",
    "lib/"
  ],
  "scripts": {
    "fmt": "npm run --silent clean && deno fmt --ignore=node_modules/",
    "lint": "npm run --silent clean && deno lint --ignore=node_modules/",
    "test": "npm run --silent prepare",
    "prepare": "deno run --allow-read --allow-write='lib/' --allow-env src/cli.ts src/tsconfig.json",
    "clean": "git clean -fXde !node_modules/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wojpawlik/deno2node.git"
  },
  "homepage": "https://fromdeno.org",
  "keywords": [
    "typescript",
    "transpile",
    "ts-morph",
    "deno"
  ],
  "author": "Wojciech Pawlik <woj.pawlik@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wojpawlik/deno2node/issues"
  },
  "engines": {
    "deno": "~1.14",
    "node": ">=14.13.1"
  },
  "dependencies": {
    "ts-morph": "^12.2.0",
    "xregexp": "^5.1.0",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@types/node": "^14.14.37"
  }
}
