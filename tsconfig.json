{
  "include": ["src/"],
  "deno2node": {
    "vendorDir": "src/vendor/",
    "shim": "src/shim.node.ts"
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "lib/",
    "skipLibCheck": true, // speed
    "strict": true,
    "target": "ES2020"
  }
}
