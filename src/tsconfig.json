{
  "deno2node": {
    "vendorDir": ".deno2node/vendor/",
    "shim": "./shim.node.ts"
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "../lib/",
    "skipLibCheck": true, // speed
    "strict": true,
    "target": "ES2020"
  }
}
